.chat-side
  .side-header
    .side-header__box
      %p.side-header__box__user-name
        = current_user.name
      %ul.side-header__box__menu
        %li.side-header__box__menu__new-group
          =link_to new_group_path do
            = fa_icon 'edit', class: 'icon', style: "color:white"
        %li.side-header__box__menu__edit-user
          =link_to edit_user_path(current_user) do
            = fa_icon 'cog', class: 'icon', style: 'color:white'
  .groups
    .group
      %p.group__group-name ぷりぷりプリズナー
      %p.group__latest-message 関節のパニック
